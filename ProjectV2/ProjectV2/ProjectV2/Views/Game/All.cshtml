
@{
    Layout = "_Layout";
}
<br />
    <div class="list-group" id="My" >
        <ul class="list-group-flush" >
            @foreach (var a in ViewBag.AllGames)
            {
                <li class="list-group-item"  style="background-color: #6884b0; margin-right: 40%;" >
                    <a style="color:black; font-size:1.2em; font-stretch:wider" href="CurrentGame/@a.Id"><img src="~/img/@a.ImgLink" width="100" height="150"/> @a.Name Price: @a.Price $</a>
                </li>
                <br />
            }
        </ul>
    </div>