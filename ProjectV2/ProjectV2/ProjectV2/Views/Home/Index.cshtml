
@{
    Layout = "_Layout";
}

<br />
<div class=" container-fluid">
    <div class="container">
        <div class="row text-center">
            @foreach (var a in @ViewBag.Games)
            {
            <div class="col-4">
                <a href="/Game/Currentgame/@a.Id" style="color:black;">
                    <img src="~/img/@a.ImgLink" class="w-100" width="120" height="540" />
                    <h3 style="font-size: 2.0em;">@a.Name</h3>
                    <p>@a.Price $</p>
                </a>
            </div>
            }
            <div class="w-100"></div>
        </div>
    </div>
</div>